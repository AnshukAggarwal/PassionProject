@model AutoCareInc.Models.Customer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Profile of @Model.CustomerFname</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd class="form-group">
            @Html.DisplayFor(model => model.CustomerFname)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd class="form-group">
            @Html.DisplayFor(model => model.CustomerLname)
        </dd>

        <dt>
            Address
        </dt>

        <dd class="form-group">
            @Html.DisplayFor(model => model.CustomerAddress)
        </dd>

        <dt>
            E-mail
        </dt>

        <dd class="form-group">
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerPhone)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
