@model IEnumerable<AutoCareInc.Models.Invoice>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Add New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            Invoice Date
        </th>
        <th>
            Notes
        </th>
        <th>
            Customer
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceNotes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerFname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id=item.InvoiceID }) |
            @Html.ActionLink("Show", "Show", new { id=item.InvoiceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InvoiceID })
        </td>
    </tr>
}

</table>
